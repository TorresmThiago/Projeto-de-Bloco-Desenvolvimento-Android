<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/questionsProgressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:layout_marginTop="10dp"
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal" />

    <ImageView
        android:id="@+id/questionBoxContainer"
        android:layout_width="325dp"
        android:layout_height="170dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/questionsProgressbar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_button_background_flat"
        android:textAllCaps="false"
        android:gravity="center"
        style="@style/iziThemeText"/>

    <TextView
        android:id="@+id/questionBox"
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/questionsProgressbar"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAllCaps="false"
        android:gravity="center"
        style="@style/iziThemeText"/>

    <Button
        android:id="@+id/questionOption_1"
        android:layout_width="325dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/questionBox"
        android:textColor="@color/colorWhite"
        android:textSize="21sp"
        android:textAllCaps="false"
        android:background="@drawable/ic_button_background_striped"
        android:text=""
        android:onClick="selectOption"
        style="@style/iziThemeText"/>

    <Button
        android:id="@+id/questionOption_2"
        android:layout_width="325dp"
        android:layout_height="75dp"
        android:layout_below="@+id/questionOption_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button_background_striped"
        android:onClick="selectOption"
        android:text=""
        android:textAllCaps="false"
        style="@style/iziThemeText"/>

    <Button
        android:id="@+id/questionOption_3"
        android:layout_width="325dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/questionOption_2"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:background="@drawable/ic_button_background_striped"
        android:text=""
        android:onClick="selectOption"
        style="@style/iziThemeText"/>

    <Button
        android:id="@+id/questionOption_4"
        android:layout_width="325dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/questionOption_3"
        android:textAllCaps="false"
        android:background="@drawable/ic_button_background_striped"
        android:text=""
        android:onClick="selectOption"
        style="@style/iziThemeText"/>


</RelativeLayout>