<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/matchPlayedBackground"
        android:layout_width="280dp"
        android:layout_height="79dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_list_background"
        android:paddingStart="55dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="16, fev. 2018"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="21sp" />

    <Button
        android:id="@+id/matchPlayedPosition"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/matchPlayedBackground"
        android:background="@drawable/ic_button_back"
        android:elevation="10dp" />

</RelativeLayout>