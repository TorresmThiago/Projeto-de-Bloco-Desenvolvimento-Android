<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:id="@+id/popUpLeaveGame">

    <TextView
        android:id="@+id/gameOptionsContainer"
        android:text="@string/leaveGameConfirmation"
        style="@style/popUpContainer" />

    <Button
        android:id="@+id/popUpLeaveGameConfirmation"
        android:text="@string/popUpConfirmation"
        android:layout_alignBottom="@+id/gameOptionsContainer"
        android:layout_alignStart="@+id/gameOptionsContainer"
        android:onClick="leaveApplication"
        style="@style/popUpConfirmationButton" />

    <Button
        android:id="@+id/popUpLeaveGameNegation"
        android:text="@string/popUpNegation"
        android:layout_alignBottom="@+id/gameOptionsContainer"
        android:layout_alignEnd="@+id/gameOptionsContainer"
        android:onClick="leaveGameConfirmation"
        style="@style/popUpNegationButton" />


</RelativeLayout>