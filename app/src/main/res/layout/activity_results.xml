<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity"
    android:background="@color/colorGray">


    <TextView
        android:id="@+id/announcingWinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/neutra_text_bold"
        android:textSize="31sp"
        android:textAlignment="center"
        android:text="Temos um vencedor!"/>

    <Button
        android:id="@+id/player_1"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/announcingWinner"
        android:background="@drawable/ic_button_answer_right"
        android:layout_centerHorizontal="true"
        android:text="Jogador 1"
        android:fontFamily="@font/neutra_text_bold"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/announcingLosers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/player_1"
        android:fontFamily="@font/neutra_text_bold"
        android:textSize="31sp"
        android:textAlignment="center"
        android:text="...E o resto."/>


    <Button
        android:id="@+id/player_2"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/announcingLosers"
        android:background="@drawable/ic_button_answer_chosen"
        android:fontFamily="@font/neutra_text_bold"
        android:text="Jogador 2"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="21sp" />

    <Button
        android:id="@+id/player_3"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/announcingLosers"
        android:background="@drawable/ic_button_answer_chosen"
        android:fontFamily="@font/neutra_text_bold"
        android:text="Jogador 3"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="21sp" />


    <Button
        android:id="@+id/player_4"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_below="@+id/player_2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_button_answer_wrong"
        android:fontFamily="@font/neutra_text_bold"
        android:text="Jogador 4"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="21sp" />


    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_above="@id/adView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_button_background_striped"
        android:text="Compartilhar"
        android:fontFamily="@font/neutra_text_bold"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="21sp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_above="@id/adView"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_button_background_striped"
        android:text="Menu"
        android:fontFamily="@font/neutra_text_bold"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:onClick="returnToMenu"
        android:textSize="21sp" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>