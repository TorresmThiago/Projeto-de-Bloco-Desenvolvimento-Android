<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="iziTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimaryDark">@color/colorYellowDark</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">223dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/ic_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">35dp</item>
    </style>

    <style name="backButton">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/optionsButtonText</item>
    </style>

    <style name="popUpNegationButton">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/ic_button_answer_wrong</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/neutra_text_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">30dp</item>
    </style>

    <style name="popUpConfirmationButton">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@drawable/ic_button_answer_right</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/neutra_text_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">30dp</item>
    </style>

    <style name="popUpContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/ic_box_question</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/neutra_text_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
