<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/ItemListBackground"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_itemlist_history_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/ItemListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ItemListBackground"
        android:layout_margin="32dp"
        android:text="Item da Lista"
        style="@style/iziThemeText"/>

</RelativeLayout>