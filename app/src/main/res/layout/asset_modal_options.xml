<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:id="@+id/popUpLeaveGame">

    <View
        android:id="@+id/gameOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_list_background" />

    <Button
        android:id="@+id/closeGameOptions"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/gameOptionsContainer"
        android:layout_margin="20dp"
        android:background="@drawable/ic_button_leave"/>

    <TextView
        android:id="@+id/gameOptionsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Menu de opções"
        style="@style/iziThemeModalTitle" />

    <TextView
        android:id="@+id/gameOptionsMusicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="50dp"
        android:text="Música"
        style="@style/iziThemeModalSubTitle" />

    <Button
        android:id="@+id/gameOptionsMusicButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/gameOptionsMusicTitle"
        android:layout_marginTop="10dp"
        android:layout_marginStart="55dp"
        android:background="@drawable/ic_button_music_on" />

    <TextView
        android:id="@+id/gameOptionsSoundTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="190dp"
        android:text="Áudio"
        style="@style/iziThemeModalSubTitle"/>

    <Button
        android:id="@+id/gameOptionsSoundButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/gameOptionsSoundTitle"
        android:layout_below="@+id/gameOptionsMusicTitle"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_button_sound_on" />



</RelativeLayout>